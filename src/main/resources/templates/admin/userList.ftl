<script type="text/javascript">


    function sendUserAdd() {

        // Ëé∑ÂèñÂ°´ÂÖ•ÁöÑË¥¶Âè∑ÂØÜÁ†ÅÔºå‰º†ÁªôÂêéÁ´Ø
        let userName = $('#addUserName').val();
        let userPassword = $('#addUserPassword').val();

        if (!checkNotNull(userName) || !checkNotNull(userPassword)) {
            zuiMsg('ËØ∑ÂÆåÂñÑ‰ø°ÊÅØ!');
            return;
        }

        $.post('/user/add', {
            userName: userName,
            userPassword: userPassword
        }, rep => {
            resolveRep(rep);
        });

    }



    function openAddModal() {
        // ÊâìÂºÄÊ®°ÊÄÅÊ°Ü
        $('#addUserModal').modal('toggle', 'center');
    }


    // ‰øÆÊîπÊ®°ÊÄÅÊ°ÜÁÇπÂáª‰øùÂ≠ò‰øÆÊîπÔºåÂèëÈÄÅÊï∞ÊçÆÂà∞ÂêéÁ´Ø‰øÆÊîπÊï∞ÊçÆ
    function userUpdate() {
        // Â∞ÜË°®ÂçïÁöÑÊï∞ÊçÆËØªÂá∫Êù•
        let userId = $('#userId').val();
        let userName = $('#userNameUpdate').val();          // userName ‰∏çËÉΩ‰øÆÊîπÔºåÊâÄ‰ª•‰∏ç‰º†Âà∞ÂêéÁ´Ø
        let userPassword = $('#userPassword').val();
        let userFrozen = $('input[name="userFrozen"]:checked').val();   // ÂÜªÁªìÂäüËÉΩËøòÊú™ÂÅö

        // console.log(userFrozen);

        if (!checkNotNull(userId)) {
            zuiMsg('ÊèêÁ§∫Ê∂àÊÅØÔºöÂá∫Èîô‰∫ÜÔºÅËØ∑Âà∑Êñ∞È°µÈù¢ÈáçËØï');
            return;
        }

        if (!checkNotNull(userPassword)) {
            zuiMsg('ÊèêÁ§∫Ê∂àÊÅØÔºöËØ∑ËæìÂÖ•‰øÆÊîπÁöÑÂØÜÁ†Å');
            return;
        }


        $.post("/user/update", {
                userId: userId,
                userPassword: userPassword
            },
            function (data) {
                if (data.code == 200) {
                    alert(data.message);
                    location.reload();
                    return;
                }
                zuiMsg(data.message);
            }
        );


    }


    // ‰øÆÊîπÊåâÈíÆÔºåÊâìÂºÄÊ®°ÊÄÅÊ°ÜÔºåÂπ∂ÂõûÊòæÊï∞ÊçÆ
    function openUpdateModal(userId, userName, userFrozen) {
        // ÊâìÂºÄÊ®°ÊÄÅÊ°Ü
        $('#userUpdateModal').modal('toggle', 'center');

        $('#userId').val(userId);   // Â°´ÂÖ•userIdÂ∏¶ÁªôÂêéÁ´Ø

        $('#userNameUpdate').val(userName);   // ÂõûÊòæuserName

        $(':radio[name="userFrozen"][value=' + userFrozen + ']').prop('checked', 'checked');

    }


    // Âà†Èô§ÊåâÈíÆ
    function delUser(userId) {
        if (!confirm('ÊòØÂê¶Âà†Èô§')) {
            return;
        }

        if (!checkNotNull(userId)) {
            new $.zui.Messager('ÊèêÁ§∫Ê∂àÊÅØÔºöÂá∫Èîô‰∫ÜÔºÅËØ∑Âà∑Êñ∞È°µÈù¢ÈáçËØï', {
                type: 'warning',     // ÂÆö‰πâÈ¢úËâ≤‰∏ªÈ¢ò
                placement: 'center'
            }).show();
            return;
        }

        $.post('/user/del', {
                userId: userId

            },
            function (data) {
                if (data.code === 200) {
                    alert(data.message);
                    location.reload();
                    return;
                } else {
                    new $.zui.Messager(data.message, {
                        type: 'warning',
                        placement: 'center'
                    }).show();
                }
            }
        );

    }


    // Ëé∑ÂèñÊñ∞Êï∞ÊçÆ
    function getNewData(pageNumber) {
        if (!checkNotNull(pageNumber)) {
            pageNumber = 1;
        }
        window.location.href = "/user/list?pageNumber=" + pageNumber + "<#if (userName?? && userName?length>0)>&userName=${userName!}</#if>";
    }

    // Ê∏≤ÊüìÈ°µÈù¢
    function renderPage() {
        let renderPageNumber = $("#renderPageNumber").val();
        if (!checkNotNull(renderPageNumber)) {
            new $.zui.Messager('ËØ∑ËæìÂÖ•Ë∑≥ËΩ¨ÁöÑÈ°µÁ†Å!', {
                type: 'warning',
                placement: 'center'
            }).show();
            return;
        }
        let totalPage = '${userPage.totalPage}';
        if (parseInt(renderPageNumber) > parseInt(totalPage)) {
            renderPageNumber = totalPage;
        }
        getNewData(renderPageNumber);
    }


</script>


